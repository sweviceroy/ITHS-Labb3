<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ================================================ -->
    <!-- 🎨 QUIZFORGE THEME – Warm Sepia / Academic Style -->
    <!-- ================================================ -->

    <!-- Base colors -->
    <Color x:Key="QuizBgColor">#A99672</Color>
    <Color x:Key="QuizPanelBgColor">#8B775A</Color>
    <Color x:Key="QuizControlBgColor">#BFA980</Color>
    <Color x:Key="QuizBorderColor">#3E3225</Color>
    <Color x:Key="QuizTextColor">#2B2118</Color>
    <Color x:Key="QuizTextSecondaryColor">#544435</Color>
    <Color x:Key="QuizAccentColor">#CBA96B</Color>
    <Color x:Key="QuizAccentHoverColor">#D6C199</Color>
    <Color x:Key="QuizAccentPressedColor">#9E7F46</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="QuizBg" Color="{StaticResource QuizBgColor}"/>
    <SolidColorBrush x:Key="QuizPanelBg" Color="{StaticResource QuizPanelBgColor}"/>
    <SolidColorBrush x:Key="QuizControlBg" Color="{StaticResource QuizControlBgColor}"/>
    <SolidColorBrush x:Key="QuizBorder" Color="{StaticResource QuizBorderColor}"/>
    <SolidColorBrush x:Key="QuizText" Color="{StaticResource QuizTextColor}"/>
    <SolidColorBrush x:Key="QuizTextSecondary" Color="{StaticResource QuizTextSecondaryColor}"/>
    <SolidColorBrush x:Key="QuizAccent" Color="{StaticResource QuizAccentColor}"/>
    <SolidColorBrush x:Key="QuizAccentHover" Color="{StaticResource QuizAccentHoverColor}"/>
    <SolidColorBrush x:Key="QuizAccentPressed" Color="{StaticResource QuizAccentPressedColor}"/>

    <!-- ================================================ -->
    <!-- Global Text and Font -->
    <!-- ================================================ -->
    <Style TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Cinzel, Georgia"/>
        <Setter Property="Foreground" Value="{StaticResource QuizText}"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
    </Style>

    <Style TargetType="Label" BasedOn="{StaticResource {x:Type TextBlock}}"/>

    <!-- ================================================ -->
    <!-- Buttons -->
    <!-- ================================================ -->
    <Style TargetType="Button">
        <Setter Property="FontFamily" Value="Cinzel, Georgia"/>
        <Setter Property="Foreground" Value="{StaticResource QuizText}"/>
        <Setter Property="Background" Value="{StaticResource QuizAccent}"/>
        <Setter Property="BorderBrush" Value="{StaticResource QuizBorder}"/>
        <Setter Property="BorderThickness" Value="1.5"/>
        <Setter Property="Padding" Value="10,5"/>
        <Setter Property="Margin" Value="3"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="6"
                            SnapsToDevicePixels="True">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          RecognizesAccessKey="True"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{StaticResource QuizAccentHover}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="{StaticResource QuizAccentPressed}"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.55"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ================================================ -->
    <!-- ListViews -->
    <!-- ================================================ -->
    <Style TargetType="ListView">
        <Setter Property="Background" Value="{StaticResource QuizControlBg}"/>
        <Setter Property="BorderBrush" Value="{StaticResource QuizBorder}"/>
        <Setter Property="Foreground" Value="{StaticResource QuizText}"/>
    </Style>

    <Style TargetType="ListViewItem">
        <Setter Property="FontFamily" Value="Georgia"/>
        <Setter Property="Foreground" Value="{StaticResource QuizText}"/>
        <Setter Property="Background" Value="{StaticResource QuizControlBg}"/>
        <Setter Property="Margin" Value="2"/>
        <Setter Property="Padding" Value="4"/>
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource QuizAccentHover}"/>
            </Trigger>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="{StaticResource QuizAccent}"/>
                <Setter Property="Foreground" Value="{StaticResource QuizText}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- ================================================ -->
    <!-- Borders / Panels -->
    <!-- ================================================ -->
    <Style TargetType="Border">
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="BorderBrush" Value="{StaticResource QuizBorder}"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>

</ResourceDictionary>
