<Application x:Class="ITHSLab3.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ITHSLab3"
             xmlns:views="clr-namespace:ITHSLab3.Views"
             xmlns:vm="clr-namespace:ITHSLab3.ViewModels"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <!-- SplashViewModel -> SplashView -->
        <DataTemplate DataType="{x:Type vm:SplashViewModel}">
            <views:SplashView />
        </DataTemplate>

        <!-- MenuViewModel -> MenuView -->
        <DataTemplate DataType="{x:Type vm:MenuViewModel}">
            <views:MenuView />
        </DataTemplate>

        <!-- (optional later)
        <DataTemplate DataType="{x:Type vm:ConfigurationViewModel}">
            <views:ConfigurationView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:PlayerViewModel}">
            <views:PlayerView />
        </DataTemplate>
        -->

    </Application.Resources>
</Application>
