<Application x:Class="ITHSLab3.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ITHSLab3"
             xmlns:views="clr-namespace:ITHSLab3.Views"
             xmlns:vm="clr-namespace:ITHSLab3.ViewModels"
             StartupUri="MainWindow.xaml">

    <Application.Resources>

        <!-- Merge global QuizForge theme, this has to be first!!! -->
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/Theme.QuizForge.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- ViewModel -> View mappings -->
            <DataTemplate DataType="{x:Type vm:SplashViewModel}">
                <views:SplashView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:MenuViewModel}">
                <views:MenuView />
            </DataTemplate>

            <!-- (optional later)
            <DataTemplate DataType="{x:Type vm:ConfigurationViewModel}">
                <views:ConfigurationView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:PlayerViewModel}">
                <views:PlayerView />
            </DataTemplate>
            -->
        </ResourceDictionary>
    </Application.Resources>
</Application>
