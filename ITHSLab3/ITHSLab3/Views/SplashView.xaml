<UserControl x:Class="ITHSLab3.Views.SplashView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ITHSLab3.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <!-- black background so it really looks like a fade from black -->
    <Grid Background="Black">
        
        <Image x:Name="SplashScreen"
               Margin="10"
               Source="/Assets/QuizForgeSplashScreen.png"
               Opacity="0"
               Stretch="Uniform">
            <Image.Triggers>
                <!-- run when the image is loaded -->
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <!-- fade in over 5 seconds -->
                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                             From="0"
                                             To="1"
                                             Duration="0:0:10" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Image.Triggers>
        </Image>
        <MediaElement x:Name="SplashSound"
              Source="pack://siteoforigin:,,,/Assets/SoundSplashScreen.wav"
              UnloadedBehavior="Stop"
              Volume="0.6"
              IsMuted="False"/>
    </Grid>
</UserControl>
